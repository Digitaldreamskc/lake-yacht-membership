{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "isolatedModules": false
  },
  "include": [
    "contracts/**/*",
    "test/**/*",
    "deploy/**/*",
    "scripts/**/*",
    "hardhat.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "app",
    "components",
    "hooks",
    "lib",
    "services"
  ]
}



